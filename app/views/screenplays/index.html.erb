<h1 class="center">Films / TV Shows</h1>
<br>
<br>
<br>
<div class="ui centered grid">
  <%= form_tag screenplays_path, class: "ui form" do %>
      <%= collection_select :screenplay, :genre_ids, Genre.all, :id, :name, {prompt: "Select a genre"}, {class: "ui dropdown"} %>
      <br>
      <br>
      <%= submit_tag("Filter", class: "ui secondary button")%>
      <%= link_to "Reset filter", screenplays_path, class: "ui secondary button" %>â€©
    <% end %>
</div>
<br>
<br>
<br>
<br>
<div class="ui centered center link cards">
  <% @screenplays.each do |screenplay| %>
    <div class="card custom_card">
      <div class="ui image div_size_screenplay_index centered">
        <%= link_to image_tag(screenplay.picture_url), screenplay, :class => "screenplay_index_img_size" %>
      </div>
      <div class="content">
        <div class="header">
          <%= link_to screenplay.title, screenplay %>
          <br>
          <br>
            <h4 class="ui horizontal divider header">
              Description
            </h4>
            <p class="screenplay_index_desc_font"><%= screenplay.description%></p>
            <br>
          <h4 class="ui horizontal divider header">
              Information
            </h4>
            <p class="screenplay_index_desc_font">Length: <%= screenplay.runtime%> minutes</p>
            <p class="screenplay_index_desc_font"><%= screenplay.seasons%></p>
            <p class="screenplay_index_desc_font"><%= screenplay.episodes%></p>
        </div>
      </div>
      <div class="extra content">
        <div class="ui segment">
          <div class="ui two column very relaxed grid">
            <div class="column">
              <strong><text>Genre:</text></strong><p><%= screenplay.get_genre(screenplay) %></p>
            </div>
            <div class="column">
              <strong><text>Category:</text></strong><p><%= screenplay.category %></p>
            </div>
          </div>
          <div class="ui vertical divider">
            &
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

