<h4><%= flash[:message] %></h4>
<% if flash[:gif] %>
  <%= image_tag(flash[:gif]) %>
  <br>
  <br>
<% end %>

<h1><%= @review.title %></h1>

<text>Review by: <%= @review.user.name %></text>
<br>
<text>Screenplay: <%= @review.screenplay.title %></text>
<br>
<p><%= @review.description %>
<br>
<br>
<text>Rating: <%= @review.rating %> Stars</text>
<br>
<br>
<%= flash[:like_error] %>
<text>Likes: <%= @review.likes.count %></text>
<%= button_to 'Give a Like!', like_path(@review), method: :put %>
<br>
<br>
<% if current_user == @review.user %>
  <%= link_to "Edit review", edit_review_path(@review) %>
<% end %>