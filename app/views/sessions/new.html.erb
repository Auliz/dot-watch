<h1 class="center">Welcome to</h1>
  <div class = "ui middle aligned center aligned">
    <img src="assets/dotwatch-transparent.png">
  </div>
<div class="ui middle aligned center aligned grid" >
  <div class="four wide column">
    <% if flash[:login_error]%>
      <div class="ui error message"><%= flash[:login_error] %></div>
    <% end %>
    <%= form_tag login_path, class: "ui large form" do %>
      <div class="ui stacked segment">
        <div class="field">
          <%= label_tag :username %>
          <%= text_field_tag :username %>
        </div>
        <div class = "field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <%= submit_tag "Login", class: "ui fluid large red submit button" %>
      </div>
    <% end %>
    <div class="ui message">
      <h5>New here? <%= link_to "Sign up", signup_path %></h5>
    </div>
  </div>
</div>

