<h1 class="center">Welcome to</h1>

<%= flash[:login_error] %>

<div class="ui middle aligned center aligned grid" >
<div class="column">
  <img src="assets/dotwatch-transparent.png" class="image" >
  <%= form_tag login_path do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <br>
    <br>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br>
  <%= submit_tag "Login", :class=>"ui button" %>
<% end %>
</div>
</div>