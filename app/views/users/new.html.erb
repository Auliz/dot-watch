<h1 class="center">Sign up!</h1>
  <div class = "ui middle aligned center aligned">
    <img src="assets/dotwatch-transparent.png">
  </div>
<div class="ui middle aligned center aligned grid" >
  <div class="four wide column">

    <% if @user.errors.any? %>
    <div class="ui form">
        <div class="ui error message">
            <div class="header"><%= pluralize(@user.errors.count, "error") %> prohibited sign up:</div>
                <ul class="list">
                    <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
    <% end %>

    <div class="ui large form">
    <%= form_for @user do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
            <%= f.label :username %>
            <%= f.text_field :username %>
        </div>
        <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        <div class="field">
            <%= f.label :password_confirmation, "Confirm Password" %>
            <%= f.password_field :password_confirmation %>
        </div>
        <div class="ui fluid large red submit button">
            <%= f.submit %>
        </div>
      </div>
    <% end %>
    <div class="ui message">
      <h5>Signed up before? <%= link_to "Log In", login_path %></h5>
    </div>
  </div>
</div>