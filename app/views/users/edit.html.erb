<p class="center header">Edit your Profile</p>

<div class="ui centered grid">
    <div class="session_items_holder">
        <% if @user.errors.any? %>
            <div class="ui error message">
                <div class="header">
                    Your profile couldn't be saved:
                </div>
                <ul class="list">
                    <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <div class="ui inverted large form">
            <%= form_for @user do |f| %>
                <div>
                    <%= f.label :name %>
                    <%= f.text_field :name, :class => "edit_page_session_input" %>
                </div>
                <div>
                    <%= f.label :username %>
                    <%= f.text_field :username, :class => "edit_page_session_input" %>
                </div>
                <div>
                    <%= f.label :age %>
                    <%= f.number_field :age, :class => "edit_page_session_input", placeholder: "Age" %>
                </div>
                <div>
                    <%= f.label :location, "Country" %>
                    <%= f.text_field :location, :class => "edit_page_session_input", placeholder: 'United States' %>
                </div>
                <div>
                    <%= f.label :bio %>
                    <%= f.text_area :bio, :class => "edit_page_session_input", placeholder: 'Your bio goes here' %>
                </div>
                <div>
                    <%= f.submit "Update Profile", :class => 'ui button session_btn' %>
                </div>
            <% end %>
        </div>
        <button class="ui button delete_button">
            <%= link_to "Delete Account", delete_account_path(@user)%>
        </button>
    </div>
</div>

